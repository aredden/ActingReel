<?xml version="1.0" encoding="UTF-8"?>
<jcr:root 
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Video Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content 
    	jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    	<items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <imagemultifield
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Images"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <content
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <multifieldcollection
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click + to add a new Video"
                                        fieldLabel="Videos"
                                        name="./multiCol">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./videos">
                                            <items jcr:primaryType="nt:unstructured">
                                                <videourl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Select Link Path"
                                                    fieldLabel="Video path"
                                                    name="./videoUrl"/>
                                                <videodescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Video description"
                                                    fieldLabel="Video description"
                                                    name="./videoDesc"/>
                                            </items>
                                        </field>
                                    </multifieldcollection>
                                </items>
                            </content>
                        </items>
                    </imagemultifield>
                    <advanced
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <content
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:title="Number of columns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
	                                    <numberfield jcr:primaryType="nt:unstructured"
	                                    	sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
	                                    	name="./cols"
	                                    	min="{Double}1"
	                                    	max="{Double}3"
	                                    	defaultValue="1"
	                                    	value="./colnum">
	                                    
	                                    </numberfield>
                                </items>
                            </content>
                        </items>
                    </advanced>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>